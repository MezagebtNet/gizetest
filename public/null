$user_gize_package = App\Models\UserGizePackage::find(1);
$package_months = $user_gize_package->gize_package->months;

$start_date = $user_gize_package->start_date;

$days =\Carbon\Carbon::createFromFormat('Y-m-d H:i:s', $start_date)->addMonths($package_months);
                   echo $days->diffInRealHours('2022-03-7 00:00:00');
